<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	<!--
		In dieser Datei schalten wir die Debug-Logger (die die Ereignisse in
		den internen Funktionen der Bibliothek protokollieren) aus bzw.
		herunter.
	-->

	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<layout class="ch.qos.logback.classic.PatternLayout">
			<Pattern>%d{HH:mm:ss} %-5level %logger{36} - %msg%n</Pattern>
		</layout>
	</appender>
	
	<logger name="sc" level="INFO" />
	<logger name="sc.networking.clients.XStreamClient" level="INFO" />
	<root level="INFO">
		<appender-ref ref="STDOUT" />
	</root>
	<root level="WARN">
		<appender-ref ref="STDERR" />
	</root>
</configuration>
